{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "listFiles": true,
        "baseUrl": "src",
        "downlevelIteration": true,
        "noUnusedLocals": false,
        "importHelpers": true,
        "esModuleInterop": true,
        "lib": ["es2017", "dom", "dom.iterable", "es2015.collection", "es2015.iterable"],
        "skipLibCheck": true,
    }
    
}
